<div class="container">
  <h1>Add a new Cocktail</h1>
  <%= simple_form_for @cocktail do |f| %>
    <%= f.input :name %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.button :submit, class: 'btn btn-success' %>
    <%= link_to "Go back", cocktails_path, class: 'btn btn-light pl-4 pr-4' %>
  <% end %>
</div>
