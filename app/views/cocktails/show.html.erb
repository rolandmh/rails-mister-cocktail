<div class="container">
  <div class="show-view">
    <div class="show-cocktail" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path @cocktail.photo, crop: :fill %>)">
      <h1 id="show"><%= @cocktail.name %></h1>
      <!--  -->

    <% @cocktail.doses.each do |dose| %>
      <p><%= dose.description %> <%= dose.ingredient.name %>
      <%= link_to(content_tag(:i, nil, class: 'fa fa-trash'), dose_path(dose.id), method: :delete, data: {
        confirm: 'Are you sure?'})  %></p>
    <% end %>
      <%= link_to "Add dose", new_cocktail_dose_path(@cocktail.id), class: 'btn btn-outline-secondary'  %>
      <%= link_to "Go back", cocktails_path, class: 'btn btn-outline-secondary' %>
    </div>
  </div>
</div>

