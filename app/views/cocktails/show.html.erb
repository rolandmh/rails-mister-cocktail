<div class="container">
  <h1><%= @cocktail.name %></h1>
  <% @cocktail.doses.each do |dose| %>
    <p><%= dose.description %> <%= dose.ingredient.name %></p>
    <%= link_to "Remove dose", dose_path(dose.id), :method => :delete, class: 'btn btn-dark'  %>
  <% end %>

  <%= link_to "Add dose", new_cocktail_dose_path(@cocktail.id), class: 'btn btn-success'  %>
  <%= link_to "Go back", cocktails_path, class: 'btn btn-light pl-4 pr-4' %>
</div>
