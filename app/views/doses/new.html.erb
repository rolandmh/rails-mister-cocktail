<div class="container">
  <h1>Add a new dose</h1>
  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.association :ingredient %>
    <%= f.input :description %>
    <%= f.button :submit, class: 'btn btn-success' %>
    <%= link_to "Go back", cocktail_path(@cocktail.id), class: 'btn btn-light pl-4 pr-4' %>
  <% end %>
</div>
